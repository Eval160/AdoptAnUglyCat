<div class="container mt-5">
  <div class="d-flex flex-column card shadow p-3">
    <div class="d-flex">
      <img src="https://source.unsplash.com/150x100/?cats" style="width: 80rem;">
      <div class="pl-3">
        <h5 class="card-title"><%= @cat.name %></h5>
        <p class="card-text"><%= @cat.description %></p>
        <%= link_to "Return to cats list", cats_path, class: "btn btn-primary" %>
      </div>
    </div>
    <div class="mt-3 p-3">
    <h3>Adopt this cat before Jules eat him!!</h3>
    <%= simple_form_for [ @cat, @purchase ] do |f| %>
      <%= f.input :message%>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>


