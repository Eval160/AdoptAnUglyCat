<div class="container pt-5 my-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <% @purchases.each do |purchase|%>
        <div class="card">
          <div class="d-flex  p-3 my-2">
            <img src="https://source.unsplash.com/50x50/?cats" style="width: 70px; border-radius: 50%; margin-right: 15px">
            <div class="d-flex justify-content-between" style="width: 100%">
              <p><%= purchase.cat.name %></p>
              <p><%= purchase.cat.created_at %></p>
             </div>
          </div>
          <%= image_tag @suivi_images.sample, alt: "alttext" %>
        </div>


      <% end %>
    </div>
  </div>
</div>

